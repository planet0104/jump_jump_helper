<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:focusable="false"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/ll_panel_root"
        android:background="@drawable/panel_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/ll_error"
            android:layout_gravity="center"
            android:layout_margin="60dp"
            android:padding="12dp"
            android:background="#eeeeee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:text="请检查“系统设置中“无障碍”中是否开启了“跳一跳助手”！"
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_close_err"
                    android:text="    关闭    "
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_show_help"
                    android:text="查看帮助"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_margin="20dp"
            android:layout_gravity="right"
            android:id="@+id/tv_close"
            android:background="@drawable/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_share"
            android:padding="20dp"
            android:text="http://app.fangte.site 分享APP"
            android:textColor="#959792"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tool"
            android:padding="20dp"
            android:text="收起"
            android:textColor="#959792"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_start_flag"
            android:visibility="invisible"
            android:background="@drawable/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_end_flag"
            android:background="@drawable/flag"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>
